{
  "name": "@cvplus/payments",
  "version": "1.0.0",
  "description": "CVPlus Payments - Stripe integration, payment processing, and booking services",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./backend": {
      "import": "./dist/backend/index.esm.js",
      "require": "./dist/backend/index.js",
      "types": "./dist/backend/index.d.ts"
    },
    "./backend/functions": {
      "import": "./dist/backend/functions/index.esm.js",
      "require": "./dist/backend/functions/index.js",
      "types": "./dist/backend/functions/index.d.ts"
    },
    "./frontend": {
      "import": "./dist/frontend/index.esm.js",
      "require": "./dist/frontend/index.js",
      "types": "./dist/frontend/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.esm.js",
      "require": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./constants": {
      "import": "./dist/constants/index.esm.js",
      "require": "./dist/constants/index.js",
      "types": "./dist/constants/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.esm.js",
      "require": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:types && npm run build:rollup",
    "build:secure": "./scripts/build/secure-build.sh",
    "build:types": "tsc --project tsconfig.build.json",
    "build:rollup": "rollup -c",
    "build:watch": "npm run build:types -- --watch",
    "clean": "rimraf dist",
    "dev": "npm run build:watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test-payment-providers": "./scripts/test/test-payment-providers.sh",
    "validate-security": "./scripts/test/validate-security.sh",
    "process-webhooks": "echo 'Processing webhook test events...' && npm run test -- --testPathPattern='webhook'",
    "audit-security": "npm audit && ./scripts/test/validate-security.sh",
    "check-pci-compliance": "./scripts/test/validate-security.sh | grep -i 'pci'",
    "deploy:staging": "./scripts/deployment/secure-deploy.sh staging",
    "deploy:production": "./scripts/deployment/secure-deploy.sh production",
    "health-check": "echo 'Running payment provider health checks...' && ./scripts/test/test-payment-providers.sh",
    "validate-dependencies": "./scripts/validate-dependencies.sh"
  },
  "dependencies": {
    "@cvplus/auth": "file:../auth",
    "@cvplus/core": "file:../core",
    "@cvplus/logging": "^1.0.0",
    "@paypal/checkout-server-sdk": "^1.0.3",
    "@paypal/payouts-sdk": "^1.1.1",
    "@types/node": "^22.9.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^6.1.1",
    "react": ">=18.0.0",
    "react-dom": "^18.3.1",
    "stripe": "^17.3.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.12",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.27.4",
    "ts-jest": "^29.2.5",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "typescript": ">=5.0.0"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "author": "Gil Klainert",
  "license": "PROPRIETARY",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gilco1973/cvplus-payments.git"
  }
}
